# Server
NODE_ENV=development
PORT=5000
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000

# Database (Use PostgreSQL or SQLite for simplicity)
DB_TYPE=postgres  # or "sqlite" for easier setup
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=college123
DB_DATABASE=ai_group_buy_college

# For SQLite (comment out above and uncomment below)
# DB_TYPE=sqlite
# DB_PATH=./database.sqlite

# Redis (Optional - can skip for college project)
REDIS_ENABLED=false
# REDIS_HOST=localhost
# REDIS_PORT=6379

# JWT
JWT_SECRET=college_project_jwt_secret_2024
JWT_EXPIRES_IN=7d

# OTP
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Payment Simulation (No real payments)
PAYMENT_SIMULATION=true
RAZORPAY_TEST_MODE=true

# AI Models Configuration
AI_MODELS_DIR=./ai_models
USE_GPU=false  # Set to true if you have NVIDIA GPU

# Image Processing
MAX_IMAGE_SIZE=5242880  # 5MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Trust System
MIN_TRUST_SCORE=50
TRUST_INCREMENT=5
TRUST_DECREMENT=10

# Escrow (Simulated)
ESCROW_SIMULATION=true
AUTO_RELEASE_HOURS=48

# File Upload (Local storage)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Email (Optional - can use console logging)
EMAIL_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# SMS (Optional - simulated)
SMS_SIMULATION=true

# Whitelisted Domains (College Project - Limited)
WHITELISTED_DOMAINS=amazon.in,flipkart.com,myntra.com,bigbasket.com

# Price Tolerance (Percentage)
PRICE_TOLERANCE_PERCENT=5